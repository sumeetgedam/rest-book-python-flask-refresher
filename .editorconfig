root = true

[*.py]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 88

[*.md]
trim_trailing_whitespace = false
max_line_length = 88

[{*.yml, *.yaml}]
indent_size = 2
end_of_line = lf
charset = utf-8


[{Makefile,**.mk}]
indent_style = tab
max_line_length = 88
